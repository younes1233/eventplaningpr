  <%- include('partials/header') %>
  <body>
    <div class="scroll-to-top" id="scrollToTop">&#8593;</div>

    <div class="hero" id="hero">
      <div class="overlay"></div>
      <h1>Welcome to Our Wedding Event Planner</h1>
      <p>Your perfect day, perfectly planned.</p>
      <a href="/contact" class="btn">Get in Touch</a>
    </div>

    <main>
      <section class="about-us">
        <h2>About Us</h2>
        <p>
          We are a team of passionate event planners dedicated to making your
          special day unforgettable. Our expertise lies in crafting unique and
          personalized experiences tailored to your preferences.
        </p>
        <!-- Add team information, values, etc. -->
      </section>

      <section class="services">
        <h2>Our Services</h2>
        <div class="service-container">
          <% services.forEach(function(service) { %>
          <div class="service">
            <img
              src="<%= service.ImageURL %>"
              alt="<%= service.ServiceName %>"
            />
            <h3><%= service.ServiceName %></h3>
            <p><%= service.Description %></p>
            <p>Price: $<%= service.Price %></p>
          </div>
          <% }); %>
        </div>
      </section>

      <!-- gallery.ejs -->

      <section class="gallery">
        <div class="gallery">
          <% galleries.forEach(item => { %>
          <div class="gallery-item">
            <img
              src="<%= item.Gallery_image %>"
              alt="<%= item.Gallery_name %>"
            />
            <div class="caption"><%= item.Gallery_caption %></div>
          </div>
          <% }); %>
        </div>
      </section>

      <section class="testimonials">
        <h2>Testimonials</h2>
        <div class="testimonial">
          <p>
            "The team made our wedding day unforgettable. Highly recommended!"
          </p>
          <cite>- John &amp; Sarah</cite>
        </div>
        <div class="testimonial">
          <p>"Professional, organized, and exceeded our expectations!"</p>
          <cite>- Michael &amp; Emily</cite>
        </div>
        <!-- Add more testimonials as needed -->
      </section>

      <section class="contact">
        <h2>Contact Us</h2>
        <a href="/contact" class="btn">Say Hello!</a>
        <!-- Add a contact form and contact information -->
        <!-- Include fields for name, email, message, etc. -->
      </section>

      <!-- Additional sections or elements can be added as necessary -->
    </main>
    <%- include('partials/footer') %>
  </body>

